doctype 5
html
    head
        title Testing..
        link(rel='stylesheet', href='lib/ext-4.1.1a/resources/css/ext-all.css')
        script(type='text/javascript', src='lib/ext-4.1.1a/ext-debug.js')

        script(type='text/javascript')
            Ext.Loader.setConfig({
                enabled: true
            });
            // Model
            Ext.define('UserModel', {
                extend: 'Ext.data.Model',
                fields: [
                    {
                        name: 'id'
                    },
                    {
                        name: 'name'
                    },
                    {
                        name: 'login'
                    }
                ]
            });
            // Store
            Ext.define('UserStore', {
                extend: 'Ext.data.JsonStore',
                model: 'UserModel',
                data: [
                    {
                        id: 1,
                        name: 'Test',
                        login: 'test'
                    },
                    {
                        id: 2,
                        name: 'TestIt',
                        login: 'testit'
                    }
                ]
            });
            // Grid
            Ext.define('GridTest', {
                extend: 'Ext.grid.Panel',
                store: Ext.create('UserStore'),
                columns: [
                    {
                        text: '#',
                        flex: 0.1,
                        dataIndex: 'id'
                    },
                    {
                        text: 'Name',
                        flex: 0.6,
                        dataIndex: 'name'
                    },
                    {
                        text: 'Login',
                        flex: 0.3,
                        dataIndex: 'login'
                    }
                ]
            });
            Ext.onReady(function() {
                Ext.require([
                    'Ext.data.*',
                    'Ext.grid.*',
                    'Ext.container.*'
                ]);
                var grid = Ext.create('GridTest');
                // Viewport
                Ext.create('Ext.container.Viewport', {
                    layout: 'border',
                    items: [
                        {
                            region: 'center',
                            items: grid
                        }
                    ]

                });
            })

